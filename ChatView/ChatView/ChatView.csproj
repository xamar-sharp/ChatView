<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
	  <Version>1.0.0</Version>
	  <Authors>TimeStreamer</Authors>
	  <Company>NextStep</Company>
	  <PackageId>Forms.Plugin.ChatView</PackageId>
	  <PackageDescription>ChatView is simple, maximum customizable implemetation of Chat in Xamarin.Forms based on MVVM principle.</PackageDescription>
	  <PackageTags>MVVM;Chat;Xamarin.Forms;ChatView</PackageTags>
	  <PackageIconUrl>https://cdn-icons-png.flaticon.com/512/547/547133.png</PackageIconUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2196" />
    <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="ChatView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>